@import 'bootstrap-sprockets'
$textColor: #FFF

<% if Woodlock.woodlock_theme %>
@import "bootswatch/<%= Woodlock.woodlock_theme %>/variables"
@import 'bootstrap'
@import "bootswatch/<%= Woodlock.woodlock_theme %>/bootswatch"
<% else %>
@import "bootswatch/spacelab/variables"
@import 'bootstrap'
@import "bootswatch/spacelab/bootswatch"
<% end %>

body
  background: url(/woodlock-background.jpg) no-repeat center center fixed
  background-size: cover

div.well-opacity
  background-color: rgba(30, 30, 30, 0.3)

em, h4
  color: #FFF

.sign-in-with-site
  color: #FFF

hr.login-divider
  border-top: 1px solid black
  opacity: .15

img.auth-logo
  width: 300px
  height: 48px

.width-100per
