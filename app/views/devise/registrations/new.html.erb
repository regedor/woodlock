<%= render 'devise/shared/display_devise_error_messages' %>

<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <div class="well well-lg well-opacity">

      <div class="btn-group" role="group">
        <div class="btn-group width-100per">
          <%= button_to t('devise.sign_up_with_facebook'), omniauth_authorize_path(resource_name, 'facebook'), class: 'btn btn-default btn-lg btn-block m-bottom-15px' %>
        </div>
        <div class="btn-group width-100per"
          <%= button_to t('devise.sign_up_with_google'), omniauth_authorize_path(resource_name, 'google_oauth2'), class: 'btn btn-default btn-lg btn-block' %>
        </div>
      </div>

      <hr class='login-divider'>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <h4><%= t 'devise.sign_up_with_site' %></h4>
        
        <div class="field form-group">
          <%= f.text_field :first_name, autofocus: true, placeholder: 'First name', class: 'form-control' %>
        </div>
        
        <div class="field form-group">
          <%= f.text_field :last_name, autofocus: true, placeholder: 'Last name', class: 'form-control' %>
        </div>

        <div class="field form-group">
          <%= f.email_field :email, autofocus: true, placeholder: 'Email', class: 'form-control' %>
        </div>
      
        <div class="field form-group">
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> <%= t 'devise.characters_minimum' %>)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "off", placeholder: 'Password', class: 'form-control' %>
        </div>
      
        <div class="field form-group">
          <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: t('devise.password_confirmation'), class: 'form-control' %>
        </div>
      
        <div class="actions form-group">
          <%= f.submit t('devise.sign_up'), class: 'btn btn-default' %>
        </div>
      <% end %>
      
      <ul class='breadcrumb'>
        <li><%= link_to t('devise.sign_in'), new_user_session_path %></li>
        <li><%= link_to t('devise.go_back'), root_path %></li>
      </ul>
    </div>
  </div>
</div>

