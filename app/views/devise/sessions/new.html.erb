<div class="row">
  <div class="col-sm-12 col-md-4 col-md-offset-4">
    <div class="well well-lg well-opacity">
      <%= image_tag '/woodlock-logo.png', size: '300x48', class: 'auth-logo' %>
      <div class="btn-group display-block" role="group">
        <div class="btn-group width-100per">
          <%= button_to t('devise.sign_in_with_facebook'), omniauth_authorize_path(resource_name, 'facebook'), class: 'btn btn-primary btn-lg btn-block m-bottom-15px' %>
        </div>
        <div class="btn-group width-100per m-bottom-15px">
          <%= button_to t('devise.sign_in_with_google'), omniauth_authorize_path(resource_name, 'google_oauth2'), class: 'btn btn-primary btn-lg btn-block' %>
        </div>
        <div class="btn-group width-100per m-bottom-15px">
          <%= button_to t('devise.sign_in_with_github'), omniauth_authorize_path(resource_name, 'github'), class: 'btn btn-primary btn-lg btn-block' %>
        </div>
      </div>
            <hr class='login-divider'>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <h4><%= t('devise.sign_in_with_site') %></h4>
        <div class="field form-group">
          <%= f.email_field :email, autofocus: true, placeholder: 'Email', class: 'form-control' %>
        </div>

        <div class="field form-group">
          <%= f.password_field :password, autocomplete: "off", placeholder: 'Password', class: 'form-control'%>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field form-group pull-right">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me, class: 'color-white' %>
          </div>
        <% end %>

        <div class="actions form-group">
          <%= f.submit t('devise.sign_in'), class: 'btn btn-default' %>
        </div>
      <% end %>

      <ul class='breadcrumb'>
        <li><%= link_to t('devise.sign_up'), new_user_registration_path %></li>
        <li><%= link_to t('devise.forgot_password'), new_password_path %></li>
        <li><%= link_to t('devise.go_back'), root_path %></li>
      </ul>
    </div>
  </div>
</div>

