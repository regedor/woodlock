<%= render 'devise/shared/display_devise_error_messages' %>

<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <div class="well well-lg well-opacity">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= f.hidden_field :reset_password_token %>

        <h4><%= t 'devise.change_your_password' %></h4>
        <div class="field form-group">
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> <%= t('devise.characters_minimum') %>)</em>
          <% end %><br />
          <%= f.password_field :password, autofocus: true, autocomplete: "off", placeholder: 'New password', class: 'form-control' %>
        </div>
      
        <div class="field form-group">
          <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: t('devise.new_password_confirmation'), class: 'form-control' %>
        </div>
      
        <div class="actions form-group">
          <%= f.submit t('devise.change_my_password'), class: 'btn btn-default' %>
        </div>
      <% end %>
      
      <ul class='breadcrumb'>
        <li><%= link_to t('devise.sign_in'), new_user_session_path %></li>
        <li><%= link_to t('devise.sign_up'), new_user_registration_path %></li>
        <li><%= link_to t('devise.go_back'), root_path %></li>
      </ul>
    </div>
  </div>
</div>

