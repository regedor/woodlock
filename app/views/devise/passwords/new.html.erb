<%= render 'devise/shared/display_devise_error_messages' %>

<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <div class="well well-lg well-opacity">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <h4><%= t 'devise.forgot_password' %></h4>
        <div class="field form-group">
          <%= f.email_field :email, autofocus: true, placeholder: 'Email', class: 'form-control' %>
        </div>
      
        <div class="actions form-group">
          <%= f.submit t('devise.send_reset_password'), class: 'btn btn-default' %>
        </div>
      <% end %>
      <ul class='breadcrumb'>
        <li><%= link_to t('devise.sign_in'), new_user_session_path %></li>
        <li><%= link_to t('devise.sign_up'), new_user_registration_path %></li>
        <li><%= link_to t('devise.go_back'), root_path %></li>
      </ul>
    </div>
  </div>
</div>

